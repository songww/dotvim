{
  "languageserver": {
    "clangd": {
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".git"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "path": "/usr/local/opt/llvm/bin/clangd"
    },
    "rust-analyzer": {
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml", ".git"],
      "serverPath": "/usr/local/bin/rust-analyzer",
      "server": {
        "path": "/usr/local/bin/rust-analyzer"
      },
      "updates": {
        "prompt": true,
        "channel": "nightly"
      },
      "cargo": {
        "allFeatures": true
      },
      "procMacro": {
        "enable": true
      },
      "checkOnSave": {
        "target": "aarch64-linux-andriod"
      },
      "lens": {
        "methodReferences": true
      }
    },
    "pyright": {
      "filetypes": ["python"],
      "rootPatterns": ["pyproject.toml", "poetry.lock", "requirements.txt", ".git"],
      "pythonPath": "python3",
      "formatting": {
        "provider": "black"
      },
      "linting": {
        "flake8Enabled": true,
        "mypyEnabled": true
      }
    }
  },
  "rust-analyzer.server.path": "/usr/local/bin/rust-analyzer",
  "rust-analyzer.updates.prompt": true,
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.checkOnSave.target": "aarch64-linux-andriod",
  "pyright.fomatting.provider": true
}
